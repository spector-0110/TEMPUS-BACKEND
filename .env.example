# Database
DATABASE_URL=
DIRECT_URL=

# Supabase
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_MODE=false
REDIS_CLUSTER_NODES=redis://localhost:6379,redis://localhost:6380,redis://localhost:6381
REDIS_LOG_LEVEL=INFO
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_POOL_SIZE=5

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost
RABBITMQ_CLUSTER_NODES=amqp://node1:5672,amqp://node2:5672,amqp://node3:5672
RABBITMQ_LOG_LEVEL=INFO
RABBITMQ_PREFETCH=10
RABBITMQ_MAX_RETRIES=3
RABBITMQ_RETRY_DELAY=5000
RABBITMQ_POOL_SIZE=10

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
MAIL_FROM_NAME=Tempus
MAIL_FROM_ADDRESS=noreply@tempus.com

# Super Admin
SUPER_ADMIN_EMAIL=admin@tempus.com

# WhatsApp Business API Configuration (Meta/Facebook)
# Get these from your Meta Developer Console at https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_API_VERSION=v21.0
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# Legacy WhatsApp (ultramsg) - can be removed if not used elsewhere
# INSTANCE_ID=your_instance_id
# ULTRMSG_TOKEN=your_ultrmsg_token

# Service Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
NODE_ENV=development